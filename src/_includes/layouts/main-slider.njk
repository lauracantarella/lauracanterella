<div  class="con-slider hidden" id="con-main-slider"> 
    <div  class="con-slider" id="main-slider"> 
        {% set counter = 0 %}
        {% set homepage = false %}
        {% if '/index.html' in permalink %}
        {% set homepage = true %}
        {% endif %}
        {% if homepage %} 
         {% set project = collections["project_" + locale] %}
        {% for item in project |  sortByOrder %}
            <div class="con-slide con-imgfit" id="slide-{{counter}}" title="{{item.data.title}}">
            <div class=text-center>
                <div class="f-title ">{{ item.data.title}}</div>
                <div class="f-menu">{{ item.data.category}}</div>
                <div class="f-menu">{{ item.data.role}}</div>
                <div class="f-menu">{{ item.data.year}}</div>
            </div>  
             {% set counter = counter + 1 %} 
            </div>  
            {% for img in item.data.media %}
              
                <div class="con-slide con-imgfit" id="slide-{{counter}}" title="{{item.data.title}}">
                    {% if img.file and img.type %}

                            {% if img.type == 'image' %}
                          
                            {% set alt = 'No alt was provided yet.' %}
                            {% if img.alt !== null %} {% set alt = img.alt %}{% endif %} 
                            {% imagefit img.file, alt, "100%" %} 
                            {% elif img.type == 'video'%}
                            <div style="padding:56.25% 0 0 0;position:relative;" class=videoembed><iframe src="https://player.vimeo.com/video/869486572?autoplay=1&muted=1" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" style="position:absolute;top:0;left:0;width:100%;height:100%;" title="Founç"></iframe></div><script src="https://player.vimeo.com/api/player.js"></script>
                            {% endif %}  
                          
                          {% else %}
                       
                        
                            Missing metadata field for media. Please check again that the fields are completed and registered. 
                         
                    {% endif %}  
                </div> 
            {% set counter = counter + 1 %} 
            {% endfor %}  
            
        {% endfor %}
        {% else %}
        {%- for img in media -%}
            <div class="con-slide con-imgfit" id="slide-{{counter}}" title="{{title}}">
                {% if img.file and img.type %}
            {% if img.type == 'image' %}
            {# maybe add scr/ to file path #}
            {% set alt = 'No alt was provided yet.' %}
            {% if img.alt !== null %} {% set alt = img.alt %}{% endif %} 
            {% imagefit img.file, alt, "100%" %} 
            {% elif img.type == 'video'%}
             <div style="padding:56.25% 0 0 0;position:relative;" class=videoembed><iframe src="https://player.vimeo.com/video/869486572?badge=0&amp;autopause=0&amp;player_id=0&amp;app_id=58479" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" style="position:absolute;top:0;left:0;width:100%;height:100%;" title="Founç"></iframe></div><script src="https://player.vimeo.com/api/player.js"></script>
                               
            {% endif %}
          
               {% else %}
                    
                            Missing metadata field for media. Please check again that the fields are completed and registered. 
                         
                    {% endif %}   {% set counter = counter + 1 %} 
            </div>  
        {% endfor %}
        {% endif %}
       
      
    </div> 
    <div id=main-controls class=controls>
            <div class="prev">
            </div>
            <div class="next" >
            </div>  
    </div> 
</div>
<script src="{{ '/_static/js/slider2.js' | url }}"></script>